{
    "name": "dalpras/image-processor",
    "description": "Unified image-processing library based on Imagick, offering stateless service + composable operations.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Dal Pr√†"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-imagick": "*"
    },
    "autoload": {
        "psr-4": {
            "DalPraS\\Image\\": "src/",
            "DalPraS\\Tests\\Image\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
	"config": {
		"vendor-dir": "vendor",
		"allow-plugins": {
			"php-http/discovery": true
		}
	},    
    "minimum-stability": "stable",
    "prefer-stable": true
}